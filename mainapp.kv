#:kivy 2.1.0
#:import hex kivy.utils.get_color_from_hex
Calculator: # fichier d'entrée

<Calculator>: # c'est un layor / construction de calculator 
    orientation:"vertical"
    TextInput: #composant fournis
        id:calc_input
        text:root.previous_value
        size_hint:1,0.20
        halign:"right"
        readonly:True
        font_size:52

    GridLayout:
        cols:4
        rows:5
        spacing:2

        DefaultButton:
            text:"AC"
            on_press:root.clear()
            

        DefaultButton:
            text:"+/-"
            on_press:root.get_input(self) #récupère la valeur de get_input self et button (fait reference au default input qui  est +/-)

        DefaultButton:
            text:"%"
            on_press:root.get_input(self)

        OrangeButton:
            text:"/"
            on_press:root.get_input(self)

        DefaultButton: # default button a pour propriété text et on_press on lui donne comme argument (self)
            text:"7"
            on_press:root.get_input(self)

        DefaultButton:
            text:"8"
            on_press:root.get_input(self)

        DefaultButton:
            text:"9"
            on_press:root.get_input(self)

        OrangeButton:
            text:"*"
            on_press:root.get_input(self)

        DefaultButton:
            text:"4"
            on_press:root.get_input(self)

        DefaultButton:
            text:"5"
            on_press:root.get_input(self)

        DefaultButton:
            text:"6"
            on_press:root.get_input(self)

        OrangeButton:
            text:"-"
            on_press:root.get_input(self)

        DefaultButton:
            text:"1"
            on_press:root.get_input(self)

        DefaultButton:
            text:"2"
            on_press:root.get_input(self)

        DefaultButton:
            text:"3"
            on_press:root.get_input(self)

        OrangeButton:
            text:"+"
            on_press:root.get_input(self)

        DefaultButton:
            text:"0"
            on_press:root.get_input(self)

        DefaultButton:
            text:"<="
            on_press:root.get_input(self)

        DefaultButton:
            text:"."
            on_press:root.get_input(self)

        OrangeButton:
            text:"="
            on_press:root.resultat()
    

<OrangeButton@Button>: #composant qui va heriter de button orange
    background_color:hex("ffc048")
    background_normal:""

<DefaultButton@Button>:
    background_normal:""
    background_color:hex("#485460")